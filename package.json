{
  "name": "awesome-hub",
  "version": "0.1.0",
  "private": true,
  "description": "A centralized hub for discovering and exploring awesome GitHub repositories",
  "keywords": [
    "awesome",
    "github",
    "repositories",
    "discovery",
    "hacktoberfest"
  ],
  "author": "Nafis Reza",
  "license": "MIT",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset --force",
    "db:deploy": "prisma migrate deploy",
    "db:start": "docker-compose up -d",
    "db:stop": "docker-compose down",
    "db:restart": "npm run db:stop && npm run db:start",
    "setup": "npm run db:start && npm run db:generate && npm run db:push && npm run seed",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "seed": "tsx prisma/seed.ts"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.0",
    "@prisma/client": "^6.16.3",
    "@radix-ui/react-dialog": "^1.1.15",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-tabs": "^1.1.13",
    "@radix-ui/react-toast": "^1.2.15",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.544.0",
    "next": "15.5.4",
    "next-auth": "^4.24.11",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "tailwind-merge": "^3.3.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.19.18",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9",
    "eslint-config-next": "15.5.4",
    "prisma": "^6.16.3",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "typescript": "^5"
  }
}
